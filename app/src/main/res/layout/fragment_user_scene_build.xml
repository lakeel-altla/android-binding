<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/view_top"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".presentation.view.fragment.UserSceneBuildFragment">

    <org.rajawali3d.view.TextureView
            android:id="@+id/texture_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <RelativeLayout android:id="@+id/view_group_object_menu"
                    android:layout_marginStart="@dimen/content_horizontal_margin"
                    android:layout_marginTop="@dimen/content_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <LinearLayout android:id="@+id/view_group_edit_object_menu"
                      android:orientation="horizontal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

            <Button android:id="@+id/button_translate_object"
                    android:text="@string/button_translate_object"
                    android:textColor="@drawable/button_text_color"
                    android:background="@drawable/button_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button android:id="@+id/button_rotate_object"
                    android:text="@string/button_rotate_object"
                    android:textColor="@drawable/button_text_color"
                    android:background="@drawable/button_background"
                    android:layout_marginStart="@dimen/content_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button android:id="@+id/button_scale_object"
                    android:text="@string/button_scale_object"
                    android:textColor="@drawable/button_text_color"
                    android:background="@drawable/button_background"
                    android:layout_marginStart="@dimen/content_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/view_group_translate_object_menu"
                      android:layout_below="@id/view_group_edit_object_menu"
                      android:layout_marginTop="@dimen/content_vertical_margin"
                      android:orientation="horizontal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

            <Button android:id="@+id/button_translate_object_in_x_axis"
                    android:text="@string/button_translate_object_in_x_axis"
                    android:textColor="@drawable/button_text_color"
                    android:background="@drawable/button_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button android:id="@+id/button_translate_object_in_y_axis"
                    android:text="@string/button_translate_object_in_y_axis"
                    android:textColor="@drawable/button_text_color"
                    android:background="@drawable/button_background"
                    android:layout_marginStart="@dimen/content_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button android:id="@+id/button_translate_object_in_z_axis"
                    android:text="@string/button_translate_object_in_z_axis"
                    android:textColor="@drawable/button_text_color"
                    android:background="@drawable/button_background"
                    android:layout_marginStart="@dimen/content_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/view_group_rotate_object_menu"
                      android:layout_below="@id/view_group_edit_object_menu"
                      android:layout_marginTop="@dimen/content_vertical_margin"
                      android:orientation="horizontal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

            <Button android:id="@+id/button_rotate_object_in_x_axis"
                    android:text="@string/button_rotate_object_in_x_axis"
                    android:textColor="@drawable/button_text_color"
                    android:background="@drawable/button_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button android:id="@+id/button_rotate_object_in_y_axis"
                    android:text="@string/button_rotate_object_in_y_axis"
                    android:textColor="@drawable/button_text_color"
                    android:background="@drawable/button_background"
                    android:layout_marginStart="@dimen/content_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button android:id="@+id/button_rotate_object_in_z_axis"
                    android:text="@string/button_rotate_object_in_z_axis"
                    android:textColor="@drawable/button_text_color"
                    android:background="@drawable/button_background"
                    android:layout_marginStart="@dimen/content_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout android:id="@+id/user_actor_image_list_container"
                 android:layout_gravity="bottom"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"/>

    <RelativeLayout android:id="@+id/view_group_debug_console"
                    android:background="@color/debug_console_background"
                    android:layout_marginStart="@dimen/content_horizontal_margin"
                    android:layout_marginEnd="@dimen/content_horizontal_margin"
                    android:layout_marginTop="@dimen/content_vertical_margin"
                    android:layout_marginBottom="@dimen/content_vertical_margin"
                    android:paddingStart="@dimen/content_horizontal_margin"
                    android:paddingEnd="@dimen/content_horizontal_margin"
                    android:paddingTop="@dimen/content_vertical_margin"
                    android:paddingBottom="@dimen/content_vertical_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

        <TextView android:id="@+id/text_view_localized_label"
                  android:text="Localized: "
                  android:textColor="@color/debug_console_text_color"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/text_view_localized_value"
                  android:textColor="@color/debug_console_text_color"
                  android:layout_toEndOf="@id/text_view_localized_label"
                  android:layout_marginStart="@dimen/content_horizontal_margin"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/text_view_ad2ss_pose_label"
                  android:text="AD2SS Pose: "
                  android:textColor="@color/debug_console_text_color"
                  android:layout_below="@id/text_view_localized_label"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/text_view_ad2ss_translation"
                  android:textColor="@color/debug_console_text_color"
                  android:layout_toEndOf="@id/text_view_ad2ss_pose_label"
                  android:layout_below="@id/text_view_localized_value"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/text_view_ad2d_pose_label"
                  android:text="AD2D Pose: "
                  android:textColor="@color/debug_console_text_color"
                  android:layout_below="@id/text_view_ad2ss_pose_label"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/text_view_ad2d_translation"
                  android:textColor="@color/debug_console_text_color"
                  android:layout_toEndOf="@id/text_view_ad2d_pose_label"
                  android:layout_below="@id/text_view_ad2ss_translation"
                  android:layout_alignStart="@id/text_view_ad2ss_translation"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/text_view_ss2d_pose_label"
                  android:text="SS2D Pose: "
                  android:textColor="@color/debug_console_text_color"
                  android:layout_below="@id/text_view_ad2d_pose_label"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/text_view_ss2d_translation"
                  android:textColor="@color/debug_console_text_color"
                  android:layout_toEndOf="@id/text_view_ss2d_pose_label"
                  android:layout_below="@id/text_view_ad2d_translation"
                  android:layout_alignStart="@id/text_view_ad2d_translation"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

    </RelativeLayout>

    <com.google.atap.tango.ux.TangoUxLayout
            android:id="@+id/layout_tango_ux"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</FrameLayout>
