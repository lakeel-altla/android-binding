<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/view_top"
              android:background="@drawable/selector_list_item"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <ImageView android:id="@+id/image_view"
               android:layout_marginStart="@dimen/content_horizontal_margin"
               android:layout_marginEnd="@dimen/content_horizontal_margin"
               android:layout_marginTop="@dimen/content_vertical_margin"
               android:layout_marginBottom="@dimen/content_vertical_margin"
               android:layout_width="@dimen/item_model_image_width"
               android:layout_height="@dimen/item_model_image_height"/>

</LinearLayout>